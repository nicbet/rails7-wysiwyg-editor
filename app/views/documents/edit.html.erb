<%= page(title: "Edit Document") do |p| %>

 <% p.breadcrumbs do |breadcrumbs| %>
   <% breadcrumbs.breadcrumb(label: "Documents", href: documents_path) %>
   <% breadcrumbs.breadcrumb(label: @document.title, href: document_path(@document)) %>
   <% breadcrumbs.breadcrumb(label: "Edit", href: edit_document_path(@document), active: true) %>
 <% end %>

 <% p.actions do %>
  <%= link_to documents_path, class: "button with-icon is-primary" do %>
     <i class="gg-arrow-left"></i>
     <span>Back to documents</span>
   <% end %>
 <% end %>

  <div class="box mt-5 p-5">
    <%= render "form", document: @document %>
  </div>

  <div class="mt-3 p-2 has-text-right"></div>

<% end %>